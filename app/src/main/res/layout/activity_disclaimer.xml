<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bmental.corgis.protomental.Disclaimer"
    android:background="@android:color/holo_blue_bright"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/meowthh"
        android:background="@android:color/holo_green_dark"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Basic prototype for HCI class. Not a full featured application. Click anywhere to continue."
        android:id="@+id/textView4"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="40dp"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true" />

    <View
        android:id="@+id/touch_listen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</RelativeLayout>
